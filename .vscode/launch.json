	"version": "2.0.0",
	"configurations": [
	  {
		"type": "node",
		"request": "launch",
		"name": "Launch API2 in Docker",
		"preLaunchTask": "tsc-watch",
		"protocol": "auto",
		"runtimeExecutable": "npm",
		"runtimeArgs": [ "run", "docker-debug" ],
		"port": 5858,
		"restart": true,
		"cwd": "${workspaceFolder}/api2",
		//"timeout": 60000,
		"localRoot": "${workspaceFolder}/api2",
		"remoteRoot": "/app",
		"outFiles": [
		  "${workspaceFolder}/dist/**/*.js"
		],
		"console": "integratedTerminal",
		"internalConsoleOptions": "neverOpen"
	  },
